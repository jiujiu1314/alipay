<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:background="#ebebeb"
        android:layout_centerInParent="true"
        android:gravity="center">
        <ImageView
            android:id="@+id/setting"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/add"
            android:visibility="visible"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_alignRight="@+id/pic_service"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/pic_service"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:layout_centerHorizontal="true"
           />
        <TextView
            android:id="@+id/service_text"
            android:layout_below="@id/pic_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:text="1111"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/coupon_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/shape_dash">
        <TextView
            android:layout_width="36dp"
            android:layout_height="3dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:layout_centerInParent="true"
            android:background="@drawable/line_shapes"/>
        <TextView
            android:layout_width="3dp"
            android:layout_height="36dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:layout_centerInParent="true"
            android:background="@drawable/line_shapes"/>
    </RelativeLayout>

</RelativeLayout>